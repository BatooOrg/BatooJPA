<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">

	<persistence-unit name="default">
		<provider>org.batoo.jpa.core.BatooPersistenceProvider</provider>

		<class>org.batoo.jpa.core.test.validation.Foo</class>
		<class>org.batoo.jpa.core.test.validation.Bar</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<validation-mode>CALLBACK</validation-mode>

		<properties>
			<property name="org.batoo.jpa.ddl" value="DROP" />

			<property name="javax.persistence.validation.group.pre-persist" value="javax.validation.groups.Default, org.batoo.jpa.core.test.validation.Persist" />
			<property name="javax.persistence.validation.group.pre-update" value="javax.validation.groups.Default, org.batoo.jpa.core.test.validation.Update" />
			<property name="javax.persistence.validation.group.pre-remove" value="org.batoo.jpa.core.test.validation.Remove" />
		</properties>

	</persistence-unit>
</persistence>