<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="insert" transaction-type="RESOURCE_LOCAL">
		<provider>org.batoo.jpa.core.PersistenceProvider</provider>

		<class>org.batoo.jpa.benchmark.insert.Country</class>
		<class>org.batoo.jpa.benchmark.insert.Person</class>
		<class>org.batoo.jpa.benchmark.insert.Address</class>
		<class>org.batoo.jpa.benchmark.insert.Phone</class>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.Driver40" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:B;create=true" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
		</properties>

	</persistence-unit>

</persistence>